@page
@model Telerik.Examples.RazorPages.Pages.MultiViewCalendar.MultiViewCalendarIndexModel
@{
    ViewData["Title"] = "MultiViewCalendarIndex";
}

<h1>MultiViewCalendarIndex</h1>

<form method="post">
    <div style="text-align: center;">
        <h4>Birthday Date</h4>
        @(Html.Kendo().MultiViewCalendar()
            .Name("SelectedDate")
            .Value(Model.SelectedDate)
    )
    </div>
</form>
