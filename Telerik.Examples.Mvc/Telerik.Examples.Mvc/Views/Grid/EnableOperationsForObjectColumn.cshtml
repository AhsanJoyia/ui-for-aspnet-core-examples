
@{
    ViewData["Title"] = "EnableOperationsForObjectColumn";
}

@using Telerik.Examples.Mvc.Models

@(Html.Kendo().Grid<Product>()
          .Name("grid")
          .DataSource(dataSource => dataSource
              .Ajax()
              .Read(read => read.Action("Read", "EnableOperationsForObjectColumn"))
              .Update(update => update.Action("Update", "EnableOperationsForObjectColumn"))
              .Create(create => create.Action("Create", "EnableOperationsForObjectColumn"))
              .Destroy(destroy => destroy.Action("Destroy", "EnableOperationsForObjectColumn"))
              .Model(m => {
                  m.Id(id => id.ProductID);
                  m.Field(f => f.ProductID).Editable(false);
              })
           )
          .ToolBar(t => t.Create())
          .Columns(columns =>
          {
              columns.Bound(product => product.ProductID);
              columns.Bound(product => product.ProductName);
              columns.Bound(product => product.UnitsInStock);
              columns.Bound(product => product.Discontinued);
              columns.Bound(product => product.Category.CategoryName).EditorTemplateName("DropDownEditor");
              columns.Command(command => command.Edit());
          })
          .Pageable()
          .Sortable()
          .Filterable()
          .Groupable()
          .Editable()
)

